{
	"schemaVersion": 1,
	"id": "glsl",
	"version": "${version}",

	"name": "GLSL Panorama",
	"description": "Allows resource packs to add GLSL shaders for the title screen panorama.",

	"icon": "assets/glsl_panorama/icon.png",
	"license": "MIT",
	"contact": {
		"homepage": "http://darktree.net/",
		"sources": "https://github.com/magistermaks/mod-glsl",
		"issues": "https://github.com/magistermaks/mod-glsl/issues"
	},

	"environment": "client",
	"entrypoints": {
		"client": [
			"net.darktree.glslmc.PanoramaClient"
		],
		"modmenu": [
			"net.darktree.glslmc.settings.Menu"
		]
	},

	"mixins": [
		"glsl.mixins.json"
	],

	"depends": {
		"fabricloader": ">=0.14.9",
		"fabric": "*",
		"minecraft": ["1.20.3", "1.20.4"]
	},

	"authors": [
		"magistermaks"
	],

	"contributors": [
	]
}
